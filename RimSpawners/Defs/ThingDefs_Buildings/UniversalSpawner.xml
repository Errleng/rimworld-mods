<Defs>
  <!-- Base Spawner -->
  <ThingDef ParentName="BuildingBase" Name="SpawnerBase" Abstract="True">
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <costList>
      <Plasteel>100</Plasteel>
      <Steel>500</Steel>
      <ComponentSpacer>10</ComponentSpacer>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
      <Mass>35</Mass>
      <WorkToBuild>8000</WorkToBuild>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(2, 2)</size>
    <fillPercent>1.0</fillPercent>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <passability>PassThroughOnly</passability>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <designationCategory>Security</designationCategory>
  </ThingDef>

  <!-- Universal Spawner -->
  <ThingDef ParentName="SpawnerBase">
    <defName>UniversalSpawner</defName>
    <label>universal assembler</label>
    <description>An ultra-tech vanometric fabrication unit used to automatically create any creature from pets to mechanoids to other humans. Assembled creatures are loyal to the owner of the assembler and will aggressively pursue threats.</description>
    <thingClass>RimSpawners.UniversalSpawner</thingClass>
    <graphicData>
      <texPath>Things/Building/Spawner/Spawner_mech</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.75, 1.75)</drawSize>
      <shadowData>
        <volume>(1.5, 1.0, 0.2)</volume>
        <offset>(0.0, 0.0, 0.0)</offset>
      </shadowData>
    </graphicData>
    <inspectorTabs>
      <li>RimSpawners.PawnSelectionITab</li>
    </inspectorTabs>
    <comps>
      <li Class="RimSpawners.CompProperties_UniversalSpawnerPawn">
        <spawnablePawnKinds></spawnablePawnKinds>
        <chooseSingleTypeToSpawn>True</chooseSingleTypeToSpawn>
        <nextSpawnInspectStringKey>MechAssemblyCompleteIn</nextSpawnInspectStringKey>
        <maxSpawnedPawnsPoints>500</maxSpawnedPawnsPoints>
        <spawnSound>MechAssembler_Spawn</spawnSound>
        <lordJob>LordJob_AssaultColony</lordJob>
        <pawnSpawnIntervalDays>0.1</pawnSpawnIntervalDays>
        <showNextSpawnInInspect>true</showNextSpawnInInspect>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(102,0,0,0)</glowColor>
      </li>
      <li>
        <compClass>RimSpawners.CompPawnSelectionGizmo</compClass>
      </li>
    </comps>
  </ThingDef>
</Defs>