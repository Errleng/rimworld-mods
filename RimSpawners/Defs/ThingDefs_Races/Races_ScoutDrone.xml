<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- Scout base -->
  <ThingDef ParentName="BaseDrone" Name="BaseDroneScout" Abstract="True">
    <statBases>
      <MoveSpeed>5.3</MoveSpeed>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
    </statBases>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <baseBodySize>0.7</baseBodySize>
      <body>ScoutDrone</body>
      <baseHealthScale>0.60</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Drone_Scout_Wounded</soundWounded>
          <soundDeath>Pawn_Drone_Scout_Death</soundDeath>
          <soundCall>Pawn_Drone_Scout_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>10000~50000</soundCallIntervalRange>
    </race>
    <tools>
      <li>
        <label>front left leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>front right leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <butcherProducts>
      <Steel>10</Steel>
    </butcherProducts>
  </ThingDef>

<!-- Scrappie -->
  <ThingDef ParentName="BaseDroneScout">
    <defName>Drone_Scrappie</defName>
    <label>scrappie drone</label>
    <description>A multilegged combat drone the size of a large dog, carries a weapon hardpoint, scout class drones are lightly armored and pose a threat in numbers.</description>
  </ThingDef>

  <PawnKindDef ParentName="BaseDroneKind">
    <defName>Drone_Scrappie</defName>
    <label>scrappie drone</label>
    <race>Drone_Scrappie</race>
    <combatPower>100</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Drone/Scout</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.00</drawSize>
          <shadowData>
            <volume>(0.6, 0.3, 0.4)</volume>
            <offset>(0,0,-0.4)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
    <defendPointRadius>0</defendPointRadius>
    <weaponTags>
      <li>DroneWeaponShrapnel</li>
    </weaponTags>
  </PawnKindDef>

