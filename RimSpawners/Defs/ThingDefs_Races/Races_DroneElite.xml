    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Drone/SpecialistElite</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.00</drawSize>
          <shadowData>
            <volume>(0.8, 0.3, 0.4)</volume>
            <offset>(0,0,-0.6)</offset>
          </shadowData>
        </bodyGraphicData>
