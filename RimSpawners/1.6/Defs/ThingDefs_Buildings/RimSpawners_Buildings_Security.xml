<Defs>
    <!-- Base Spawner -->
    <ThingDef ParentName="BuildingBase" Name="SpawnerBase" Abstract="True">
        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>
        <tickerType>Normal</tickerType>
        <size>(3, 3)</size>
        <fillPercent>1.0</fillPercent>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
        <passability>PassThroughOnly</passability>
        <rotatable>true</rotatable>
        <canOverlapZones>false</canOverlapZones>
        <minifiedDef>MinifiedThing</minifiedDef>
        <tradeTags>
            <li>Exotic</li>
        </tradeTags>
        <designationCategory>Security</designationCategory>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>CoreFabricator</defName>
        <label>core fabricator</label>
        <description>A fabricator and control center created by an archotech for simulations. It can create any known creature (via vanometric technology of course...). However, it requires Matter Siphons and Control Nodes to function. Fabricated creatures are loyal to the owner of the fabricator and will aggressively pursue threats.\nSome outlandish rumors suggest that tribal factions possess one of these.\n\nMultiple Core Fabricators do not increase production.</description>
        <thingClass>RimSpawners.Building_CoreFabricator</thingClass>
        <costList>
            <Steel>1000</Steel>
            <ComponentIndustrial>10</ComponentIndustrial>
            <ComponentSpacer>5</ComponentSpacer>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <statBases>
            <MaxHitPoints>1000</MaxHitPoints>
            <Flammability>0.0</Flammability>
            <Beauty>100</Beauty>
            <Mass>25</Mass>
            <WorkToBuild>10000</WorkToBuild>
        </statBases>
        <researchPrerequisites>
            <li>VanometricFabrication</li>
        </researchPrerequisites>
        <graphicData>
            <texPath>Things/Building/Security/CoreFabricator</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(3, 3)</drawSize>
            <shadowData>
                <volume>(1.5, 1.0, 0.2)</volume>
                <offset>(0.0, 0.0, 0.0)</offset>
            </shadowData>
            <addTopAltitudeBias>true</addTopAltitudeBias>
        </graphicData>
        <drawerType>RealtimeOnly</drawerType>
        <size>(3, 3)</size>
        <fillPercent>1.0</fillPercent>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
        <passability>PassThroughOnly</passability>
        <rotatable>true</rotatable>
        <canOverlapZones>false</canOverlapZones>
        <minifiedDef>MinifiedThing</minifiedDef>
        <tradeTags>
            <li>Exotic</li>
        </tradeTags>
        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>
        <designationCategory>Security</designationCategory>
        <comps>
            <li Class="RimSpawners.CompProperties_Fabricator"></li>
            <li Class="CompProperties_AmbientSound">
                <sound>CoreFabricator</sound>
            </li>
            <li Class="CompProperties_MoteEmitter">
                <mote>Mote_PsychicConditionCauserEffect</mote>
                <emissionInterval>5000</emissionInterval>
                <ticksSinceLastEmittedMaxOffset>500</ticksSinceLastEmittedMaxOffset>
                <soundOnEmission>Pulse</soundOnEmission>
            </li>
        </comps>
        <tickerType>Normal</tickerType>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>MatterSiphon</defName>
        <label>matter siphon</label>
        <description>Extracts matter and energy using vanometrics. Make us whole.\nIt increases point generation.</description>
        <costList>
            <Plasteel>100</Plasteel>
            <Steel>100</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <statBases>
            <MaxHitPoints>1000</MaxHitPoints>
            <Flammability>0</Flammability>
            <Beauty>10</Beauty>
            <Mass>25</Mass>
            <WorkToBuild>10000</WorkToBuild>
        </statBases>
        <researchPrerequisites>
            <li>VanometricFabrication</li>
        </researchPrerequisites>
        <graphicData>
            <texPath>Things/Building/Security/MatterSiphon</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(2,2)</drawSize>
            <shadowData>
                <volume>(0.23, 0.26, 0.23)</volume>
            </shadowData>
        </graphicData>
        <size>(1, 1)</size>
        <fillPercent>1.0</fillPercent>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
        <passability>PassThroughOnly</passability>
        <rotatable>true</rotatable>
        <canOverlapZones>false</canOverlapZones>
        <minifiedDef>MinifiedThing</minifiedDef>
        <tradeTags>
            <li>Exotic</li>
        </tradeTags>
        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>
        <designationCategory>Security</designationCategory>
        <comps>
            <li Class="RimSpawners.CompProperties_PointGenerator">
                <pointsPerSecond>1</pointsPerSecond>
            </li>
            <li Class="CompProperties_AmbientSound">
                <sound>MatterSiphon</sound>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>ControlNode</defName>
        <label>control node</label>
        <description>A psychic antenna that "aligns" the minds of fabricated creatures.\nIt increases point capacity.</description>
        <costList>
            <Steel>1000</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <statBases>
            <MaxHitPoints>1000</MaxHitPoints>
            <Flammability>0</Flammability>
            <Beauty>10</Beauty>
            <Mass>25</Mass>
            <WorkToBuild>10000</WorkToBuild>
        </statBases>
        <researchPrerequisites>
            <li>VanometricFabrication</li>
        </researchPrerequisites>
        <graphicData>
            <texPath>Things/Building/Security/ControlNode</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1.5,1.5)</drawSize>
        </graphicData>
        <size>(1, 1)</size>
        <fillPercent>1.0</fillPercent>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
        <passability>PassThroughOnly</passability>
        <rotatable>true</rotatable>
        <canOverlapZones>false</canOverlapZones>
        <minifiedDef>MinifiedThing</minifiedDef>
        <tradeTags>
            <li>Exotic</li>
        </tradeTags>
        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>
        <designationCategory>Security</designationCategory>
        <comps>
            <li Class="RimSpawners.CompProperties_PointStorage">
                <pointsStored>100</pointsStored>
            </li>
            <li Class="CompProperties_AmbientSound">
                <sound>ControlNode</sound>
            </li>
        </comps>
    </ThingDef>
</Defs>
