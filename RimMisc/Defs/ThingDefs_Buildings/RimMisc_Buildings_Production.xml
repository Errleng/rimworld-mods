<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>VanometricCondenser</defName>
    <label>vanometric condenser</label>
    <description>Archotec machine that converts energy into mass. Requires high level thought patterns from intelligent beings to make any noticeable progress.</description>
		<thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/Production/Defoliator</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <size>(3,3)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <fillPercent>0.5</fillPercent>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-3)</interactionCellOffset>
    <inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
    <designationCategory>Production</designationCategory>
    <rotatable>true</rotatable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <uiIconOffset>(0, 0.03)</uiIconOffset>
    <uiIconScale>0.85</uiIconScale>
    <minifiedDef>MinifiedThing</minifiedDef>
    <building>
      <uninstallWork>5000</uninstallWork>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <costList>
      <Steel>5000</Steel>
      <ComponentIndustrial>50</ComponentIndustrial>
      <ComponentSpacer>25</ComponentSpacer>
    </costList>
    <placeWorkers>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <researchPrerequisites>
      <li>VanometricCondensation</li>
    </researchPrerequisites>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>50000</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>-25</Beauty>
      <Mass>200</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>5000</basePowerConsumption>
      </li>
    </comps>
  </ThingDef>
</Defs>
